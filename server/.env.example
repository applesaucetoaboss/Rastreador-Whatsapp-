# Required for Stripe API authentication
STRIPE_SECRET_KEY=sk_test_YourTestKey

# Required for webhook signature verification (generate in Stripe dashboard)
STRIPE_WEBHOOK_SECRET=whsec_YourWebhookSecret

# Required for subscription pricing (create a price in Stripe dashboard)
STRIPE_PRICE_MXN_180_MONTHLY=price_YourPriceID

# Optional: Custom port if not set by host (e.g., Render sets PORT automatically)
PORT=4242

# Optional: Success URL for payment redirects
PUBLIC_SUCCESS_URL=https://your-domain.com/payment-success