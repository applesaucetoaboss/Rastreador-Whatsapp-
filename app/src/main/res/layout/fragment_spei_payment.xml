<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvSpeiInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/spei_instructions"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvSpeiClabe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#F0F0F0"
        android:padding="12dp"
        android:text="@string/spei_clabe"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSpeiReference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnConfirmSpei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#128C7E"
        android:padding="12dp"
        android:text="@string/spei_confirm"
        android:textColor="@android:color/white" />

</LinearLayout>